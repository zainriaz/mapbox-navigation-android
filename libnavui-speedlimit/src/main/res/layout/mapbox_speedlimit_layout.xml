<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapboxSpeedLimitView"
    android:layout_width="60dp"
    android:layout_height="60dp"
    >

  <ImageView
      android:id="@+id/mapboxSpeedLimitBackground"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>

  <TextView
      android:id="@+id/mapboxSpeedLimitText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:gravity="center"
      android:textColor="@color/mapbox_speed_limit_text_color"
      android:textSize="14sp"
      tools:text="35"
      android:layout_gravity="center"
      app:layout_constraintTop_toTopOf="@id/mapboxSpeedLimitBackground"
      app:layout_constraintEnd_toEndOf="@id/mapboxSpeedLimitBackground"
      app:layout_constraintStart_toStartOf="@id/mapboxSpeedLimitBackground"
      app:layout_constraintBottom_toBottomOf="@id/mapboxSpeedLimitBackground"/>
</androidx.constraintlayout.widget.ConstraintLayout>